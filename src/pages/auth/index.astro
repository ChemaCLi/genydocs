---
import Layout from '../../../src/modules/shared/layouts/index.astro'
---
<Layout>
  <div id="ContentContainer">
    <div id="LeftContainerIllustration">
    </div>
    <div id="RightContainerForm">
      <h2 id="greeting">Nice to see you here! ðŸ˜‰</h2>

      <section id="introduction">
        <div>
          <h1>Sign in </h1>
          <form id="SignInForm">
            <input class="Input" type="text" placeholder="Email" />
            <input class="Input" type="password" placeholder="Password" />
            <button class="Button" type="submit">Sign in</button>
            <a href="/password-recovery">Forgot my password</a>
          </form>
        </div>
        <div>
          <h2>Or create an account</h2>
          <form>
            <input class="Input" type="text" placeholder="Email" />
            <input class="Input" type="password" placeholder="Password" />
            <input class="Input" type="password" placeholder="Confirm password" />
            <button class="Button" type="submit">Sign up</button>
          </form>
        </div>
      </section>
    </div>
  </div>
</Layout>


<style>
  #ContentContainer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: calc(100vh - 73px);
  }

  #LeftContainerIllustration {
    flex: 1;
    height: 100%;
    background-color: #F5F5F5;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: url('/laptop-green.svg');
    background-repeat: no-repeat;
    background-position: center;
    background-size: 80%;
    overflow-y: auto;
  }

  /* hide the left container on mobile */
  @media (max-width: 900px) {
    #LeftContainerIllustration {
      display: none;
    }
  }

  

  #RightContainerForm {
    flex: 1;
    width: 50%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 20px;
    padding: 1rem;
    box-sizing: border-box;
  }

  #greeting {
    font-family: 'Caveat', cursive;
    font-size: 2rem;
  }

  #SignInForm {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  input.Input {
    width: 100%;
    height: 40px;
    border-radius: 5px;
    border: 1px solid #E0E0E0;
    margin-bottom: 10px;
    padding-left: 10px;
    box-sizing: border-box;
  }

  .Button {
    width: 100%;
    height: 40px;
    border-radius: 5px;
    border: 1px solid #E0E0E0;
    margin-bottom: 10px;
    padding-left: 10px;
    color: white;
    background-color: var(--color-primary-dark);
    transition: all 0.1s ease-in-out;
  }

  .Button:hover {
    cursor: pointer;
    background-color: var(--color-primary);
  }
</style>